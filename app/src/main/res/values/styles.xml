<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:progressBarStyle">@style/BaseProgressBarStyle</item>
    </style>

    <style name="BaseProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressDrawable">@drawable/rotate_shape_gradient_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/rotate_shape_gradient_progressbar</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.Base.NoActionBar">
    </style>

    <style name="MainTheme" parent="Theme.Base.NoActionBar">
    </style>

    <!-- Login Main Activity -->
    <style name= "UsernameEditText" parent="">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/username</item>
        <item name="android:ems">15</item>
        <item name="android:drawableStart">@drawable/ic_username</item>
        <item name="android:textColor">@color/edit_text_color</item>
    </style>

    <style name= "PasswordEditText" parent="">
        <item name="android:layout_marginTop">@dimen/password_edit_text_margin_top</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/password</item>
        <item name="android:ems">15</item>
        <item name="android:drawableStart">@drawable/ic_password</item>
        <item name="android:textColor">@color/edit_text_color</item>
    </style>

    <style name= "LoginButton" parent="">
        <item name="android:text">@string/login</item>
        <item name="android:textSize">@dimen/login_button_text_size</item>
        <item name="android:textColor">@color/login_button_text_color</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="LoginProgressBar" parent="BaseProgressBarStyle">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/login_progress_bar_margin_top</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
